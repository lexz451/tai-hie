---
import Modal from "../Modal.astro";
import InfraBg from "../../images/infrastructural.png";
---

<Modal id="infrastructural" bg={InfraBg}>
    <h3 class="text-6xl font-bold text-white">
        Infrastructural components
    </h3>
    <div class="grid grid-cols-3 container mx-auto gap-y-10 gap-x-10 mt-20">
        <div class="bg-black bg-opacity-50 p-10 relative flex flex-col justify-center">
            <span
                class="absolute w-10 h-10 rounded-full bg-white -top-5 left-10"
            ></span>
            <h4
                class="text-white font-bold text-4xl text-center self-center leading-tight"
            >
                Datification and <br /> digitalization
            </h4>
        </div>
        <div class="bg-black bg-opacity-50 p-10 relative">
            <span
                class="absolute w-10 h-10 rounded-full bg-white -top-5 left-10"
            ></span>
            <ul class="text-white self-center text-center">
                <li class="">Labeling and classification</li>
                <li class="mt-2">Platforms / Mediums</li>
                <li class="mt-2">AI / ML</li>
                <li class="mt-2">Data</li>
                <li class="mt-2">Business model</li>
                <li class="mt-2">Authentification / Provenance</li>
                <li class="mt-2">Content moderation</li>
            </ul>
        </div>
        
        <div class="bg-black bg-opacity-50 p-10 relative flex flex-col justify-center">
            <span
                class="absolute w-10 h-10 rounded-full bg-white -top-5 left-10"
            ></span>
            <h4
            class="text-white font-bold text-4xl text-center self-center leading-tight"
        >
            Access and <br /> connectivity
        </h4>
        </div>
    </div>
</Modal>
