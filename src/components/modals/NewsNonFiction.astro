---
import Modal from "../Modal.astro";
import NonFictionBg from "../../images/non-fiction.png";
---

<Modal id="non_fiction" color="#91ffea" bg={NonFictionBg}>
    <h3 class="text-6xl font-bold text-blue-dark-translucent">
        News / Non-Fiction Media
    </h3>
    <div
        class="mt-20 grid grid-cols-2 grid-rows-2 gap-y-10 gap-x-14 text-white"
    >
        <div class="bg-blue-dark bg-opacity-50 p-10 relative">
            <span
                class="absolute w-10 h-10 rounded-full bg-white -top-5 left-10"
            ></span>
            <h4 class="text-2xl font-semibold">
                Preparedness and resilience
            </h4>
            <ul class="list-disc list-inside mt-5">
                <li class="text-xl">Safety and security</li>
                <li class="text-xl">Digital infrastructure</li>
                <li class="text-xl">Training and capacity building</li>
                <li class="text-xl">Adaptability</li>
                <li class="text-xl">SEO, metadata, digitalization</li>
            </ul>
        </div>
        <div class="bg-blue-dark bg-opacity-50 p-10 relative">
            <span
                class="absolute w-10 h-10 rounded-full bg-white -top-5 left-10"
            ></span>
            <h4 class="text-2xl font-semibold">
                Business / Organizational
            </h4>
            <ul class="list-disc list-inside mt-5">
                <li class="text-xl">Economic model</li>
                <li class="text-xl">Ownership andiIndependence</li>
                <li class="text-xl">Sources and proximity</li>

                <li class="text-xl">Relevance</li>
                <li class="text-xl">Platforms</li>
            </ul>
        </div>
        <div class="bg-blue-dark bg-opacity-50 p-10 relative">
            <span
                class="absolute w-10 h-10 rounded-full bg-white -top-5 left-10"
            ></span>
            <h4 class="text-2xl font-semibold">
                Professionalism
            </h4>
            <ul class="list-disc list-inside mt-5">
                <li class="text-xl">Norms</li>
                <li class="text-xl">Habits</li>
                <li class="text-xl">Standards and codes of ethics</li>
                <li class="text-xl">Training and skills buildings</li>
            </ul>
        </div>
        <div class="bg-blue-dark bg-opacity-50 p-10 relative">
            <span
                class="absolute w-10 h-10 rounded-full bg-white -top-5 left-10"
            ></span>
            <h4 class="text-2xl font-semibold">
                Editorial
            </h4>
            <ul class="list-disc list-inside mt-5">
                <li class="text-xl">Inclusivity</li>
                <li class="text-xl">Languages</li>
                <li class="text-xl">Factchecking and verification</li>
                <li class="text-xl">Independence</li>
                <li class="text-xl">Coverage / Beats</li>
            </ul>
        </div>
    </div>
</Modal>