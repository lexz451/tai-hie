---
import { Icon, Sprite } from "astro-icon";
---

<div class="flex py-10">
    <div class="flex-1">
        <Sprite.Provider>
            <Sprite name="logo-white" class="fill-light w-[200px] h-[50px]"></Sprite>
        </Sprite.Provider>
    </div>
    <div class="flex items-center">
        <Icon pack="mdi" name="facebook" class="nav-icon"></Icon>
        <Icon pack="mdi" name="instagram" class="nav-icon"></Icon>
        <Icon pack="mdi" name="twitter" class="nav-icon"></Icon>
        <Icon pack="mdi" name="linkedin" class="nav-icon"></Icon>
        <Icon pack="mdi" name="youtube" class="nav-icon"></Icon>
    </div>
</div>

<style lang="postcss">
    .nav-icon {
        @apply w-[30px] h-[30px] text-green-accent border border-solid border-green-accent p-[4px] rounded-full mx-2;
    }
</style>